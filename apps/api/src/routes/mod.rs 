pub mod auth;
pub mod escrows;
pub mod disputes;
pub mod wallets;

use axum::Router;

pub fn router() -> Router {
    Router::new()
        .nest("/api/v1/auth", auth::router())
        .nest("/api/v1/escrows", escrows::router())
        .nest("/api/v1/disputes", disputes::router())
        .nest("/api/v1/wallets", wallets::router())
}
